<div id="vote_form">
  <% if logged_in? %>
    <% if (current_user.voted_down_on? article) || (!ActsAsVotable::Vote.where(voter_id: current_user,votable_id: article.id).present?) %>
      <%= link_to article_votes_path(article), method: :article, remote: true do %>
        <span class="glyphicon glyphicon-heart-empty"></span>
      <% end %>
    <% else %>
      <%= link_to article_vote_path(article,0), method: :delete, remote: true do %>
        <span class="glyphicon glyphicon-heart"></span>
      <% end %>
    <% end %>
  <% end %>
  <%= article.get_upvotes.size %> <%= t "articles.show.like" %>
  <%= raw article.votes_for.up.by_type(User).voters.map { |voter| link_to voter.name, "#" }.join(', ') %>
</div>